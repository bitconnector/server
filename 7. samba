apt install samba

nano /etc/samba/smb.conf
#########################################################################
[global]
	workgroup = WORKGROUP
	server string = %h
	security = user
	unix extensions = yes
	invalid users = root

	log file = /var/log/samba/log.%m
	max log size = 50
	log level = 3

	encrypt passwords = yes

	#Alle Rechte von denen des Verzeichnisses darueber nehmen	
	inherit acls = yes
	inherit owner = yes
	inherit permissions = yes
	
[Medien]
	comment = Musik, Bilder...
	path = /data/home/Medien
	public = no
	writeable = no
	valid users = @medien @medien-w
	write list = @medien-write
	browseable = yes

[Datentransfer]
	comment = hier haben alle lese und schreibrechte
	path = /data/home/Datentransfer
	valid users = @datentransfer
	public = no
	writeable = yes
	browseable = yes

[homes]
	comment = Home Directories
	browseable = no
	path = /data/home/%S
	valid users = %S
	writable = yes
#########################################################################
testparm
/etc/init.d/samba restart


smbpasswd -a neueruser
